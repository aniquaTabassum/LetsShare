<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/appName"
        android:layout_width="383dp"
        android:layout_height="50dp"
        android:background="@color/gradientStart"
        android:text="Let's Share"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:fontFamily="@font/baloo_tamma"/>

    <TextView
        android:id="@+id/selectText"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_below="@+id/appName"
        android:fontFamily="@font/baloo_tamma"
        android:text="Selected: "
        android:textStyle="bold"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/selectEditText"
        android:layout_below="@id/appName"
        android:layout_toRightOf="@id/selectText"
        android:fontFamily="@font/baloo_tamma"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/sendStatus"
        android:layout_below="@id/selectText"
        android:fontFamily="@font/baloo_tamma"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:textSize="25sp"/>
    <LinearLayout

        android:layout_below="@id/sendStatus"
       android:orientation="horizontal"
        android:layout_width="383dp"
        android:layout_height="80dp"
        android:weightSum="300"
        android:layout_marginVertical="200dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="25"></LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="99">
            <ImageButton
                android:id="@+id/selectButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundedbutton"
                android:src="@drawable/select2"
                android:scaleType="centerInside"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="50"></LinearLayout>
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="101">
            <ImageButton
                android:id="@+id/sendButton"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:background="@drawable/roundedbutton"
                android:src="@drawable/sent"
                android:scaleType="centerInside"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>